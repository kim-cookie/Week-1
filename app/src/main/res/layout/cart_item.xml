<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- 체크박스 -->
    <CheckBox
        android:id="@+id/itemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/itemCheckBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/cartItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="제품 이름"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/cartItemImage"
        app:layout_constraintTop_toTopOf="@id/cartItemImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp" />

    <!-- 사이즈 -->
    <TextView
        android:id="@+id/cartItemSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사이즈: M"
        android:textSize="14sp"
        android:textColor="#444444"
        app:layout_constraintStart_toStartOf="@id/cartItemName"
        app:layout_constraintTop_toBottomOf="@id/cartItemName"
        android:layout_marginTop="4dp" />

    <!-- 수량 -->
    <TextView
        android:id="@+id/cartItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량: 2"
        android:textSize="14sp"
        android:textColor="#444444"
        app:layout_constraintStart_toStartOf="@id/cartItemName"
        app:layout_constraintTop_toBottomOf="@id/cartItemSize"
        android:layout_marginTop="4dp" />

    <!-- 가격 -->
    <TextView
        android:id="@+id/cartItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₩1,000"
        android:textSize="14sp"
        android:textColor="#444444"
        app:layout_constraintStart_toStartOf="@id/cartItemName"
        app:layout_constraintTop_toBottomOf="@id/cartItemQuantity"
        android:layout_marginTop="4dp" />

    <!-- 삭제 버튼 -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:text="삭제"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cartItemImage" />

</androidx.constraintlayout.widget.ConstraintLayout>


